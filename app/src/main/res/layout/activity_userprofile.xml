<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="121dp"
        android:layout_height="74dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_menu_camera" />



    <TextView android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="Upload/Change foto"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="NAGİMA KANATBEK KYZY"
        android:textSize="24sp"
        android:textStyle="bold"


        />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center_horizontal">

        <TextView
            android:id="@+id/additionalTextView"
            android:layout_width="252dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_background"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="99150674124"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:background="@color/white"
            android:text="TC kimlik" />

    </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"

        >

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="252dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="date"
            android:padding="5sp"

            android:text="15.04.2002"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:text="Doğum tarihi"

            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"

        >



        <TextView
            android:id="@+id/textView4"
            android:layout_width="252dp"
            android:layout_height="43dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="+905411615021"
            android:textSize="20sp"

            />
        <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:background="@color/white"

        android:text="Telefon Numaranız" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="252dp"
            android:layout_height="43dp"
            android:text="Ankara, Turkiye"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:layout_marginTop="0dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adres"
            android:layout_marginLeft="90dp"
            android:background="@color/white"

            >

        </TextView>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="252dp"
            android:layout_height="43dp"
            android:text="06060, Ayce sokagi"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:layout_marginTop="0dp"
            android:padding="4sp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adres"
            android:layout_marginLeft="90dp"
            android:background="@color/white"

            >

        </TextView>



    </FrameLayout>


    <Button
        android:id="@+id/updateButton"
        android:layout_width="175dp"
        android:layout_height="43dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:text="Bilgilerimi Güncelle"
        android:textColor="@color/white"
        android:textSize="11dp"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="29dp"
        android:background="@color/primary_100"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewsettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/settings"

                ></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Ayarlar"
                android:textColor="@color/white"
                android:textSize="16dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/homeicon"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Ana Sayfa"
                android:textColor="@color/white"
                android:textSize="16dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@android:drawable/stat_sys_phone_call"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Ara"
                android:textColor="@color/white"
                android:textSize="16dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/fui_ic_anonymous_white_24dp"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47dp"
                android:text="Profilim"
                android:textColor="@color/white"></TextView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Requests_frag">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="KATILMA İSTEĞİ"
            android:layout_marginBottom="20dp"/>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/baseline_warehouse_24"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:text="Yenimahalle Gençlik Merkezi"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tvOrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Devlet"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp"
                    android:text="•"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="City,Country"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <TextView
                android:id="@+id/tvCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50/100"
                android:textSize="16sp"
                android:layout_margin="6dp"/>

        </LinearLayout>





    </LinearLayout>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.  "
            android:textSize="16sp"
            android:layout_margin="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_margin="10dp"/>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              >


              <EditText
                  android:id="@+id/idTVSelectedTimeArrival"
                  android:layout_width="200dp"
                  android:layout_height="52dp"
                  android:layout_alignParentStart="true"
                  android:layout_marginStart="8dp"
                  android:layout_marginTop="15dp"
                  android:layout_marginEnd="8dp"
                  android:layout_marginBottom="10dp"
                  android:background="@drawable/rounded_background"
                  android:hint="Giriş Zamanı"
                  android:inputType="time"
                  android:maxLength="5"
                  android:paddingLeft="20dp"
                  android:paddingTop="2dp"
                  android:textColor="@android:color/black"
                  android:textColorHint="#999999"
                  android:textSize="15sp"/>
              <TextView
                  android:id="@+id/idTVHeadingArrival"
                  android:layout_width="wrap_content"
                  android:layout_alignStart="@id/idTVSelectedTimeArrival"
                  android:layout_alignTop="@id/idTVSelectedTimeArrival"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="15dp"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="-15dp"
                  android:background="@android:color/white"
                  android:padding="4dp"
                  android:text="Varış Zamanı"
                  android:textColor="@color/primary_100"
                  android:textSize="12sp" />

              <com.google.android.material.button.MaterialButton
                  style="@style/Widget.MaterialComponents.Button.Icon"
                  android:id="@+id/atimePickerButtonArrival"
                  android:layout_width="60dp"
                  android:layout_height="52dp"
                  android:layout_alignTop="@id/idTVSelectedTimeArrival"
                  android:layout_alignEnd="@id/idTVSelectedTimeArrival"
                  android:layout_below="@id/idTVHeadingArrival"
                  android:background="@drawable/rounded_corners_3"
                  app:icon="@drawable/clock"
                  app:iconGravity="start"
                  app:iconSize="30dp"
                  app:iconTint="@color/white"
                  android:textColor="@color/white" />


              <EditText
                  android:id="@+id/idTVSelectedTime"
                  android:layout_width="200dp"
                  android:layout_height="52dp"
                  android:layout_alignParentStart="true"
                  android:layout_marginStart="8dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginEnd="8dp"
                  android:layout_marginBottom="5dp"
                  android:layout_toRightOf="@id/idTVSelectedTimeArrival"
                  android:background="@drawable/rounded_background"
                  android:hint="Gitme Zamanı"
                  android:layout_below="@id/idTVSelectedTimeArrival"
                  android:inputType="time"
                  android:maxLength="5"
                  android:paddingLeft="20dp"
                  android:paddingTop="2dp"
                  android:textColor="@android:color/black"
                  android:textColorHint="#999999"
                  android:textSize="15sp"/>
              <TextView
                  android:id="@+id/idTVHeading"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignStart="@id/idTVSelectedTime"
                  android:layout_alignTop="@id/idTVSelectedTime"
                  android:layout_marginStart="15dp"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="-15dp"
                  android:background="@android:color/white"
                  android:padding="4dp"
                  android:text="Çıkış Zamanı"
                  android:textColor="@color/primary_100"
                  android:textSize="12sp" />

              <com.google.android.material.button.MaterialButton
                  style="@style/Widget.MaterialComponents.Button.Icon"
                  android:id="@+id/dtimePickerButton"
                  android:layout_width="60dp"
                  android:layout_height="52dp"
                  android:layout_below="@id/idTVHeading"
                  android:layout_alignTop="@id/idTVSelectedTime"
                  android:layout_alignEnd="@id/idTVSelectedTime"
                  android:background="@drawable/rounded_corners_3"
                  android:textSize="17sp"
                  app:icon="@drawable/clock"
                  app:iconGravity="start"
                  app:iconSize="30dp"
                  app:iconTint="@color/white"
                  android:textColor="@color/white" />

          </RelativeLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <Button
                  android:id="@+id/btnConfirm"
                  android:layout_width="120dp"
                  android:layout_height="55dp"
                  android:layout_gravity="center_vertical"
                  android:layout_marginBottom="5dp"
                  android:layout_marginLeft="9dp"
                  android:layout_marginTop="39dp"
                  android:background="@drawable/rounded_background"
                  android:text="Onayla"
                  android:textColor="@color/white"
                  android:textSize="16dp" />

          </LinearLayout>


      </LinearLayout>
    </LinearLayout>


</FrameLayout>